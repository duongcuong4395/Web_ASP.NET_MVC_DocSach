@using WebsiteDocSach.Models

@model IEnumerable<ChiTietHoaDonKHResult>

@{
    Layout = "~/Views/Layout/LayoutQuanTri.cshtml";
}
 

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Chi Tiết Hóa đơn Khách Hàng</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <i class="fa fa-bar-chart-o fa-fw"></i> Thông Tin Đơn hàng
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <address>
                <strong>Người gửi.</strong><br>
                @ViewBag.khGuiHoTen<br />
                @ViewBag.khGuiDiachi<br />
                @ViewBag.khGuiSDT<br />
                @ViewBag.khGuiEmail
            </address>

            <address>
                <strong>Người nhận.</strong><br>
                @ViewBag.khNhanHoTen<br />
                @ViewBag.khNhanDiachi<br />
                @ViewBag.khNhanSDT 
            </address>

            <table class="table table-hover" style="height: 150px; overflow-y: auto; display: block;">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên sách</th> 
                    </tr>
                </thead>
                <tbody>
                    @{
                        int dem = 0;
                    }
                    @foreach (var item in Model)
                    {
                        dem++;
                        <tr>
                            <td>@dem</td>
                            <td>@item.tensach</td> 
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div> 
</div>