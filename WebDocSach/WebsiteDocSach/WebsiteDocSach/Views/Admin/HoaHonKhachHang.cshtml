@using WebsiteDocSach.Models
@model List<donhang>


 
<div class="panel-body">
    <table class="table table-hover" style="height: 500px; overflow-y: auto; display: block;">
        <thead>
            <tr>
                <th>STT</th>
                <th>Ngày lập</th>
                <th>Ngày Giao</th>
                <th>Người nhận</th>
                <th>Địa chỉ nhận</th>
                <th>SDT</th>
                <th>Xem</th>
            </tr>
        </thead>
        <tbody>
            @{
                int dem = 0;
            }
            @foreach (var item in Model)
            {
                dem++;
                <tr>
                    <td>@dem</td>
                    <td>@string.Format("{0:dd/MM/yyyy}", item.ngaylap)</td>
                    <td>@string.Format("{0:dd/MM/yyyy}", item.ngaygiaohang) </td>
                    <td>@item.hotennguoinhan</td>
                    <td>@item.diachinguoinhan</td>
                    <td>@item.sodienthoainguoinhan</td>
                    <td><a href="@Url.Action("chiTietHoaDon", "Admin", new {Mahoadon = @item.iddh})">Xem</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

