@model WebsiteDocSach.Models.chude

@{
    ViewBag.Title = "SuaChuDe";
    Layout = "~/Views/Layout/LayoutQuanTri.cshtml";
}

<h2>SuaChuDe</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idchude)
        <div class="form-group">
            @Html.LabelFor(model => model.idchude, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div style="font:18px; padding: 5px 0 0 5px">@Model.idchude</div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tenchude, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tenchude, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tenchude, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "ChuDe")
</div>
