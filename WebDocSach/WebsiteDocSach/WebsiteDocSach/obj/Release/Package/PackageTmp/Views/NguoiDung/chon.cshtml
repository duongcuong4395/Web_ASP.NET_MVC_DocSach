        <!--Đổi mật khẩu-->
        <li class="steps active">
            <a href="#doimatkhau" class="panel-heading collapsed step-title" data-toggle="collapse">04. ĐỔI MẬT KHẨU </a>
            <div class="step-description collapse panel-body" id="doimatkhau">
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <div class="new-customer">
                            <h5> LƯU Ý </h5>
                            <p class="requir">
                                <strong style="color:red; font-size:16px;">Mật khẩu mới</strong> Và <strong style="color:red; font-size:16px;">Xác nhận</strong> lại phải giống nhau.
                            </p>
                            <br />
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="run-customer">
                            <h5>
                                Thông tin cần điền.
                            </h5>
                            <h5>
                                <span style="color: red; font-size: 16px;">* @ViewBag.ThongBao</span>
                            </h5>
                                                @*<p>@ViewBag.Thongbao</p>*@
                            @using (Html.BeginForm("DoiMatKhau", "NguoiDung", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(false)
                                            <form>
                                                <div class="form-row">
                                                    <label class="lebel-abs">Mật khẩu cũ <strong class="red"> * </strong> </label>
                                                    <input type="password" class="input namefild" name="MatKhauCu" maxlength="20" oninput="VietKhongDau(this)" required>
                                                </div>
                                                <div class="form-row">
                                                    <label class="lebel-abs">Mật khẩu mới <strong class="red"> * </strong> </label>
                                                    <input type="password" class="input namefild" name="MatKhauMoi" maxlength="20" oninput="VietKhongDau(this)" required>
                                                </div>
                                                <div class="form-row">
                                                    <label class="lebel-abs">Xác nhận lại <strong class="red"> * </strong> </label>
                                                    <input type="password" class="input namefild" name="XacNhanMatKhau" maxlength="20" oninput="VietKhongDau(this)" required>
