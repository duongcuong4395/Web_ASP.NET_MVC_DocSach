<div class="price-filter leftbar">
    <h3 class="title" style="font-weight: bold;" id="TIMSACHTHEOGIA">
        TÌM SÁCH THEO GIÁ
    </h3>
    @using (Html.BeginForm("TimKiemTheoGiaMoi", "TimKiem", FormMethod.Post))
    { 
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
    <form class="pricing">

        <div class="form-group input-group">
            <input type="number" placeholder="Bắt đầu từ giá......" name="GiaNho" maxlength="3" oninput="maxLengthCheck(this)" onkeypress='return isNumberKey(event)' style="width:100%"   /> 
            @*<input type="number" placeholder="Bắt đầu từ giá......" class="form-control" name="GiaNho" maxlength="6" oninput="maxLengthCheck(this)" onkeypress='return isNumberKey(event)' required />*@
            <span class="input-group-addon">000 VND</span>
        </div>
        <div class="form-group input-group">
            <input type="number" placeholder="Đến giá......" name="GiaLon" oninput="maxLengthCheck(this)" onkeypress='return isNumberKey(event)' maxlength="3" style="width:100%" />
            @*<input type="number" placeholder="Đến giá......" class="form-control" name="GiaLon" maxlength="6" oninput="maxLengthCheck(this)" onkeypress='return isNumberKey(event)' required />*@
            <span class="input-group-addon">000 VND</span>
        </div> 
        <input type="submit" class="classname" value="Tìm">
    </form>
    }
</div>


