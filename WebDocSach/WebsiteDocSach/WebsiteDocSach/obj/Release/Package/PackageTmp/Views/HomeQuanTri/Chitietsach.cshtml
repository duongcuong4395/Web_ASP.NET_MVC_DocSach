@model BOOKSTORE_ONLINE.Models.sach

@{
    ViewBag.Title = "Chitietsach";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Detail</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên sách:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tensach)
        </dd>

        <dt>
            Giá:
        </dt>

        <dd>
            @String.Format("{0:0,0}", Model.gia) VNĐ
        </dd>

        <dt>
            Khuyến mãi
        </dt>

        <dd>
            @Html.DisplayFor(model => model.khuyenmai)
        </dd>

        <dt>
            Mô tả:
        </dt>

        <dd style="width:600px; text-align:justify">
            @Html.Raw(Model.mota)
        </dd>

        <dt>
            Ảnh bìa:
        </dt>

        <dd>
            <img src="@Url.Content("~/Anhbia/"+Model.anhbia)" width="150px" />
        </dd>

        <dt>
            Ngày cập nhật:
        </dt>

        <dd>
            @String.Format("{0:dd/MM/yyyy}", Model.ngaycapnhat)
        </dd>

        <dt>
            Nội dung:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.noidung)
        </dd>

        <dt>
            Link tải:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.linktai)
        </dd>

        <dt>
            Tên nhà xuất bản:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nxb.tennxb)
        </dd>

        <dt>
            Tên chủ đề:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.chude.tenchude)
        </dd>

        <dt>
            Giá mới:
        </dt>

        <dd>
            @String.Format("{0:0,0}", Model.GiaMoi) VNĐ
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Suasach", new { id = Model.idsach }) |
    @Html.ActionLink("Back to List", "Sach")
</p>
