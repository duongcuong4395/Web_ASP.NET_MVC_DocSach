@using BOOKSTORE_ONLINE.Models
@using PagedList.Mvc;
@model PagedList.PagedList<BOOKSTORE_ONLINE.Models.chitietdh>
@{
    ViewBag.Title = "Chitietdonhang";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3><strong>Detail of exhibition</strong></h3>

<table id="racetimes">
    <tr id="firstrow">
        <th style="width:200px; text-align:center">
            Số lượng
        </th>
        <th style="width:200px; text-align:center">
            Đơn giá
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.soluong)
            </td>
            <td>
                @String.Format("{0:0,0}", item.dongia)
            </td>
        </tr>
    }

</table>
                Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
                <div class="MenuTrang">
                    @Html.PagedListPager(Model, page => Url.Action("Chitietdonhang", new { page = page }))
                </div>
                <style>
                    .MenuTrang li {
                        display: inline;
                    }
                </style>